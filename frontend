    <script>
        const API_BASE = 'http://localhost:3000/api';
        let authToken = localStorage.getItem('authToken');
        let charts = {};

        // Verificar se j√° est√° logado
        if (authToken) {
            showMainApp();
        }

        // Fun√ß√£o para fazer requisi√ß√µes √† API
        async function apiRequest(endpoint, method = 'GET', data = null) {
            try {
                const options = {
                    method,
                    headers: {
                        'Content-Type': 'application/json',
                    }
                };
                
                if (authToken) {
                    options.headers['Authorization'] = `Bearer ${authToken}`;
                }
                
                if (data) {
                    options.body = JSON.stringify(data);
                }
                
                const response = await fetch(`${API_BASE}${endpoint}`, options);
                const result = await response.json();
                
                if (!response.ok) {
                    if (response.status === 401) {
                        logout();
                        throw new Error('Sess√£o expirada. Fa√ßa login novamente.');
                    }
                    throw new Error(result.error || 'Erro na requisi√ß√£o');
                }
                
                return result;
            } catch (error) {
                console.error('Erro na API:', error);
                throw error;
            }
        }

        // Login
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            try {
                const response = await apiRequest('/auth/login', 'POST', data);
                authToken = response.token;
                localStorage.setItem('authToken', authToken);
                
                showMainApp();
                loadDashboard();
            } catch (error) {
                document.getElementById('loginError').textContent = error.message;
                document.getElementById('loginError').classList.remove('hidden');
            }
        });

        // Logout
        function logout() {
            authToken = null;
            localStorage.removeItem('authToken');
            document.getElementById('loginSection').classList.remove('hidden');
            document.getElementById('mainApp').classList.add('hidden');
        }

        // Mostrar aplica√ß√£o principal
        function showMainApp() {
            document.getElementById('loginSection').classList.add('hidden');
            document.getElementById('mainApp').classList.remove('hidden');
        }

        // Fun√ß√£o para mostrar se√ß√µes
        function showSection(sectionName) {
            // Esconder todas as se√ß√µes
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Remover classe active de todos os bot√µes
            document.querySelectorAll('.nav button').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Mostrar a se√ß√£o selecionada
            document.getElementById(sectionName).classList.add('active');
            
            // Adicionar classe active ao bot√£o clicado
            event.target.classList.add('active');
            
            // Carregar dados se necess√°rio
            if (sectionName === 'dashboard') {
                loadDashboard();
            } else if (sectionName === 'clientes') {
                loadClientes();
            } else if (sectionName === 'processos') {
                loadProcessos();
            } else if (sectionName === 'documentos') {
                loadDocumentos();
            } else if (sectionName === 'financeiro') {
                loadFinanceiro();
            } else if (sectionName === 'agenda') {
                loadAgenda();
            } else if (sectionName === 'perfil') {
                loadPerfil();
            }
        }

        // Carregar dashboard com gr√°ficos
        async function loadDashboard() {
            try {
                // Carregar estat√≠sticas
                const stats = await apiRequest('/estatisticas');
                
                document.getElementById('clientesAtivos').textContent = stats.clientes_ativos || 0;
                document.getElementById('processosAtivos').textContent = stats.processos_ativos || 0;
                document.getElementById('processosConcluidos').textContent = stats.processos_concluidos || 0;
                document.getElementById('receitasTotais').textContent = `‚Ç¨${(stats.receitas_totais || 0).toFixed(2)}`;

                // Carregar dados para gr√°ficos
                await loadCharts();
            } catch (error) {
                console.error('Erro ao carregar dashboard:', error);
            }
        }

        // Carregar gr√°ficos
        async function loadCharts() {
            try {
                // Dados dos processos
                const processos = await apiRequest('/processos');
                const financeiro = await apiRequest('/financeiro');
                const agenda = await apiRequest('/agenda');

                // Gr√°fico de Processos por M√™s
                createProcessosChart(processos);
                
                // Gr√°fico de Receitas vs Despesas
                createFinanceiroChart(financeiro);
                
                // Gr√°fico de Estados dos Processos
                createEstadosChart(processos);
                
                // Gr√°fico de Agenda
                createAgendaChart(agenda);

            } catch (error) {
                console.error('Erro ao carregar gr√°ficos:', error);
            }
        }

        // Criar gr√°fico de processos por m√™s
        function createProcessosChart(processos) {
            const ctx = document.getElementById('processosChart').getContext('2d');
            
            // Agrupar processos por m√™s
            const processosPorMes = {};
            processos.forEach(proc => {
                const mes = new Date(proc.data_abertura).toLocaleDateString('pt-BR', { month: 'short', year: 'numeric' });
                processosPorMes[mes] = (processosPorMes[mes] || 0) + 1;
            });

            if (charts.processos) charts.processos.destroy();
            
            charts.processos = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: Object.keys(processosPorMes),
                    datasets: [{
                        label: 'Processos Abertos',
                        data: Object.values(processosPorMes),
                        borderColor: '#667eea',
                        backgroundColor: 'rgba(102, 126, 234, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }

        // Criar gr√°fico de receitas vs despesas
        function createFinanceiroChart(financeiro) {
            const ctx = document.getElementById('financeiroChart').getContext('2d');
            
            const receitas = financeiro.filter(f => f.tipo === 'Honor√°rio').reduce((sum, f) => sum + (f.valor || 0), 0);
            const despesas = financeiro.filter(f => f.tipo === 'Despesa').reduce((sum, f) => sum + (f.valor || 0), 0);

            if (charts.financeiro) charts.financeiro.destroy();
            
            charts.financeiro = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Receitas', 'Despesas'],
                    datasets: [{
                        data: [receitas, despesas],
                        backgroundColor: ['#28a745', '#dc3545'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }

        // Criar gr√°fico de estados dos processos
        function createEstadosChart(processos) {
            const ctx = document.getElementById('estadosChart').getContext('2d');
            
            const estados = {};
            processos.forEach(proc => {
                estados[proc.estado] = (estados[proc.estado] || 0) + 1;
            });

            if (charts.estados) charts.estados.destroy();
            
            charts.estados = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: Object.keys(estados),
                    datasets: [{
                        label: 'N√∫mero de Processos',
                        data: Object.values(estados),
                        backgroundColor: ['#667eea', '#28a745', '#ffc107'],
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }

        // Criar gr√°fico de agenda
        function createAgendaChart(agenda) {
            const ctx = document.getElementById('agendaChart').getContext('2d');
            
            // Agrupar por pr√≥ximos 7 dias
            const hoje = new Date();
            const proximos7Dias = [];
            
            for (let i = 0; i < 7; i++) {
                const data = new Date(hoje);
                data.setDate(hoje.getDate() + i);
                proximos7Dias.push(data.toLocaleDateString('pt-BR', { weekday: 'short' }));
            }

            const eventosPorDia = new Array(7).fill(0);
            agenda.forEach(evt => {
                const dataEvento = new Date(evt.data_evento);
                const diffTime = dataEvento - hoje;
                const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                
                if (diffDays >= 0 && diffDays < 7) {
                    eventosPorDia[diffDays]++;
                }
            });

            if (charts.agenda) charts.agenda.destroy();
            
            charts.agenda = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: proximos7Dias,
                    datasets: [{
                        label: 'Compromissos',
                        data: eventosPorDia,
                        backgroundColor: '#764ba2',
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }

        // Carregar clientes
        async function loadClientes() {
            try {
                const clientes = await apiRequest('/clientes');
                const clientesList = document.getElementById('clientesList');
                
                if (clientes.length === 0) {
                    clientesList.innerHTML = '<p>Nenhum cliente encontrado.</p>';
                    return;
                }
                
                const html = clientes.map(cliente => `
                    <div class="data-item">
                        <h4>${cliente.nome}</h4>
                        <p><strong>NIF:</strong> ${cliente.nif || '-'}</p>
                        <p><strong>Email:</strong> ${cliente.email || '-'}</p>
                        <p><strong>Telefone:</strong> ${cliente.telefone || '-'}</p>
                    </div>
                `).join('');
                
                clientesList.innerHTML = html;
            } catch (error) {
                document.getElementById('clientesList').innerHTML = 
                    `<div class="error">Erro ao carregar clientes: ${error.message}</div>`;
            }
        }

        // Carregar processos
        async function loadProcessos() {
            try {
                const processos = await apiRequest('/processos');
                const processosList = document.getElementById('processosList');
                
                if (processos.length === 0) {
                    processosList.innerHTML = '<p>Nenhum processo encontrado.</p>';
                    return;
                }
                
                const html = processos.map(proc => `
                    <div class="data-item">
                        <h4>${proc.numero_processo}</h4>
                        <p><strong>Cliente:</strong> ${proc.cliente_nome || '-'}</p>
                        <p><strong>Tipo:</strong> ${proc.tipo_processo || '-'}</p>
                        <p><strong>Estado:</strong> <span class="status-badge status-${proc.estado.toLowerCase().replace(' ', '')}">${proc.estado}</span></p>
                    </div>
                `).join('');
                
                processosList.innerHTML = html;
            } catch (error) {
                document.getElementById('processosList').innerHTML = 
                    `<div class="error">Erro ao carregar processos: ${error.message}</div>`;
            }
        }

        // Carregar documentos
        async function loadDocumentos() {
            try {
                const documentos = await apiRequest('/documentos');
                const documentosList = document.getElementById('documentosList');
                
                if (documentos.length === 0) {
                    documentosList.innerHTML = '<p>Nenhum documento encontrado.</p>';
                    return;
                }
                
                const html = documentos.map(doc => `
                    <div class="data-item">
                        <h4>${doc.nome_documento}</h4>
                        <p><strong>Tipo:</strong> ${doc.tipo_documento || '-'}</p>
                        <p><strong>Processo:</strong> ${doc.numero_processo || '-'}</p>
                        <p><strong>Data Upload:</strong> ${new Date(doc.data_upload).toLocaleDateString('pt-BR')}</p>
                    </div>
                `).join('');
                
                documentosList.innerHTML = html;
            } catch (error) {
                document.getElementById('documentosList').innerHTML = 
                    `<div class="error">Erro ao carregar documentos: ${error.message}</div>`;
            }
        }

        // Carregar financeiro
        async function loadFinanceiro() {
            try {
                const financeiro = await apiRequest('/financeiro');
                const resumoFinanceiro = document.getElementById('resumoFinanceiro');
                
                if (financeiro.length === 0) {
                    resumoFinanceiro.innerHTML = '<p>Nenhum registo financeiro encontrado.</p>';
                    return;
                }
                
                const html = financeiro.map(fin => `
                    <div class="data-item">
                        <h4>${fin.tipo} - ‚Ç¨${fin.valor}</h4>
                        <p><strong>Descri√ß√£o:</strong> ${fin.descricao || '-'}</p>
                        <p><strong>Status:</strong> <span class="status-badge status-${fin.status.toLowerCase()}">${fin.status}</span></p>
                        <p><strong>Data:</strong> ${new Date(fin.data_registo).toLocaleDateString('pt-BR')}</p>
                    </div>
                `).join('');
                
                resumoFinanceiro.innerHTML = html;
            } catch (error) {
                document.getElementById('resumoFinanceiro').innerHTML = 
                    `<div class="error">Erro ao carregar dados financeiros: ${error.message}</div>`;
            }
        }

        // Carregar agenda
        async function loadAgenda() {
            try {
                const agenda = await apiRequest('/agenda');
                const agendaList = document.getElementById('agendaList');
                
                if (agenda.length === 0) {
                    agendaList.innerHTML = '<p>Nenhum compromisso encontrado.</p>';
                    return;
                }
                
                const html = agenda.map(evt => `
                    <div class="data-item">
                        <h4>${evt.titulo}</h4>
                        <p><strong>Data:</strong> ${new Date(evt.data_evento).toLocaleString('pt-BR')}</p>
                        <p><strong>Processo:</strong> ${evt.numero_processo || '-'}</p>
                        <p><strong>Observa√ß√µes:</strong> ${evt.observacoes || '-'}</p>
                    </div>
                `).join('');
                
                agendaList.innerHTML = html;
            } catch (error) {
                document.getElementById('agendaList').innerHTML = 
                    `<div class="error">Erro ao carregar agenda: ${error.message}</div>`;
            }
        }

        // Carregar perfil
        async function loadPerfil() {
            try {
                const perfil = await apiRequest('/solicitadora');
                const perfilInfo = document.getElementById('perfilInfo');
                
                if (perfil.length === 0) {
                    perfilInfo.innerHTML = '<p>Nenhum perfil encontrado.</p>';
                    return;
                }
                
                const info = perfil[0];
                const html = `
                    <div class="responsive-grid">
                        <div class="data-item">
                            <h4>Nome</h4>
                            <p>${info.nome || '-'}</p>
                        </div>
                        <div class="data-item">
                            <h4>NIF</h4>
                            <p>${info.nif || '-'}</p>
                        </div>
                        <div class="data-item">
                            <h4>Email</h4>
                            <p>${info.email || '-'}</p>
                        </div>
                        <div class="data-item">
                            <h4>Telefone</h4>
                            <p>${info.telefone || '-'}</p>
                        </div>
                        <div class="data-item" style="grid-column: 1 / -1;">
                            <h4>Morada</h4>
                            <p>${info.morada || '-'}</p>
                        </div>
                    </div>
                `;
                
                perfilInfo.innerHTML = html;
            } catch (error) {
                document.getElementById('perfilInfo').innerHTML = 
                    `<div class="error">Erro ao carregar perfil: ${error.message}</div>`;
            }
        }
    </script>
</body>
</html>
